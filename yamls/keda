helm repo add kedacore https://kedacore.github.io/charts  
helm repo update
helm install keda kedacore/keda --namespace keda --create-namespace
kubectl get pods -n keda
-------------------------------------
examples:

root@master:/trainer# cat keda-deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: kedad1
  name: kedad1
  namespace: trainer
spec:
  replicas: 1
  selector:
    matchLabels:
      app: kedad1
  template:
    metadata:
      creationTimestamp: null
      labels:
        app: kedad1
    spec:
      containers:
      - image: nginx
        name: nginx
        resources:
          limits:
            cpu: 40m
            memory: 40M
          requests:
            cpu: 20m
            memory: 20M
-------------------------------------
apiVersion: keda.sh/v1alpha1
kind: ScaledObject
metadata:
  name: keda-demo-scaledobject
  namespace: default
spec:
  scaleTargetRef:
    name: kedad1
  minReplicaCount: 1
  maxReplicaCount: 10
  triggers:
    - type: cpu
      metricType: Utilization
      metadata:
        value: "50"
===================================================
kubectl get scaledobject -n trainer
kubectl get hpa -n trainer
kubectl get pods -n trainer
============================
To increase cpu load , login to one of the pod and run below command
kubectl exec -it podname -n trainer -- bash
dd if=/dev/zero of=/dev/null

